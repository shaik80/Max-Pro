  <!-- Page Wrapper -->
  <div id="wrapper">
    {{>sidenavbar}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      {{>topnavbar}}
      <!-- Main Content -->
      <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Profit Maximaization</h1>
          </div>
          {{>messages}}
          <!-- Basic Card Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <div class="text-lg font-weight-bold text-primary text-uppercase mb-1 text-center ">cal max profit</div>
            </div>
            <div class="card-body ">
              <div class="mt-3 ">
                <div class="col-12 ">
                  <form class="user" action="/maxprofit" method="post">
                    <div class="row">
                      <div class="form-group  col-6">
                        <input type="text" id="items" name="items" class="form-control form-control-user m-2"
                          placeholder="Enter Item name" value="{{items}}" required/>
                      </div>
                      <div class="form-group  col-6">
                        <input type="text" id="profit" name="profit" class="form-control form-control-user m-2"
                          placeholder="Enter Profit" value="{{profit}}" required/>
                      </div>
                      <div class="form-group  col-6">
                        <input type="text" id="mybudget" name="mybudget" class="form-control form-control-user m-2"
                          placeholder="Enter Budget" value="{{mybudget}}" required/>
                      </div>
                      <div class="form-group  col-6">

                        <input type="text" id="mydemand" name="mydemand" class="form-control form-control-user m-2"
                          placeholder="Enter number of items" value="{{mydemand}}" required/>
                      </div>
                      <div class="form-group  col-6">
                        <input type="text" id="price" name="price" class="form-control form-control-user m-2"
                          placeholder="Enter price" value="{{price}}" required/>
                      </div>
                      <div class="form-group  col-6">
                        <button type="submit" class="btn btn-success btn-icon-split m-2">
                          <span class="text">Calculate</span>
                        </button>
                      </div>

                    </div>
                  </form>
                  <hr>
                </div>
              </div>
            </div>
          </div>


          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Result</h6>
            </div>

            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Qty</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Name</th>
                      <th>Qty</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    {{#each result}}
                    <tr>
                      <td>{{this.name}}</td>
                      <td>{{this.qty}}</td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>

      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
  </div>
  <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->